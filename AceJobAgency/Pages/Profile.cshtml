@page
@model AceJobAgency.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile";

}
<h1 class="display-4">@ViewData["Title"]</h1>

<div>
    <div>
        <label class="col-sm-2 col-form-label">
            @Html.DisplayNameFor(
            m => m.MModel.FirstName):
        </label>
        <label>@Model.MModel.FirstName</label>
    </div>
    <div>
        <label class="col-sm-2 col-form-label">
            @Html.DisplayNameFor(
            m => m.MModel.LastName):
        </label>
        <label>@Model.MModel.LastName</label>
    </div>
    <div>
        <label class="col-sm-2 col-form-label">
            @Html.DisplayNameFor(
            m => m.MModel.Gender):
        </label>
        <label>@Model.MModel.Gender</label>
    </div>
    <div>
        <label class="col-sm-2 col-form-label">
            @Html.DisplayNameFor(
            m => m.MModel.NRIC):
        </label>
        <label>@Model.MModel.NRIC</label>
    </div>
    <div>
        <label class="col-sm-2 col-form-label">
            @Html.DisplayNameFor(
            m => m.MModel.DateOfBirth):
        </label>
        <label>@Model.MModel.DateOfBirth.ToShortDateString()</label>
    </div>
    <div>
        <label class="col-sm-2 col-form-label">
            @Html.DisplayNameFor(
            m => m.MModel.WhoamI):
        </label>
        <label>@Model.MModel.WhoamI</label>
    </div>
  
    <div class="mt-3">
        <a class="btn btn-secondary" id="backbtn" href="/Index">Back</a>
    </div>
</div>
